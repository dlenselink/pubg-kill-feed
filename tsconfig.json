{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"target": "es6",
		"lib": ["esnext", "dom"],
		"jsx": "react",
    "allowJs": true,
    "strict": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"rootDirs": ["src", "./"],
    "baseUrl": "src",
		"paths": {
      "Assets/*": ["assets/*"],
      "Components/*": ["components/*"],
			"*": ["components/Utils/*.d.ts"]
    }
	},
	"exclude": [
    "node_modules",
		"dist"
  ]
}